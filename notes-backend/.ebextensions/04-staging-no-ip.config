# STAGING TEST: No Public IP Configuration
# This will test removing IPv4 costs without affecting production

option_settings:
  # Use Application Load Balancer
  aws:elasticbeanstalk:environment:
    LoadBalancerType: application
    
  # CRITICAL: No public IP for instances (this saves $43.20/year)
  aws:autoscaling:launchconfiguration:
    AssociatePublicIpAddress: false
    
  aws:ec2:vpc:
    AssociatePublicIpAddress: false
    ELBScheme: public
    ELBSubnets: subnet-0b4ae9be80dda6fbe,subnet-08fd14c23a1761f0e,subnet-06e31c3feee16d6ca
    Subnets: subnet-0b4ae9be80dda6fbe,subnet-08fd14c23a1761f0e,subnet-06e31c3feee16d6ca
    VPCId: vpc-0d777f457a6e25a47
    
  # Enable IPv6 support
  aws:elbv2:loadbalancer:
    IpAddressType: dualstack
