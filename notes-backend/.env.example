# ================================
# DEPLOYMENT ENVIRONMENT VARIABLES
# ================================

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/notes
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long_for_production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Application Configuration
FRONTEND_URL=https://your-frontend-domain.com
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# OAuth2 Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Performance Configuration
DB_MAX_POOL_SIZE=20
DB_MIN_IDLE=5
TOMCAT_MAX_THREADS=200
RATE_LIMITING_ENABLED=true
RATE_LIMIT_RPM=100

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password

# SSL Configuration (when using HTTPS)
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password

# Application Metadata
APP_VERSION=1.0.0
ENVIRONMENT=production
BUILD_TIME=2025-01-01T00:00:00Z
GIT_COMMIT=main

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_FILE_PATH=/var/log/notes-backend/application.log
